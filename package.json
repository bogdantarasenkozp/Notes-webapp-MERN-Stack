{
  "name": "koa_boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "scripts": {
    "clean": "rm -rf ./api/build && mkdir ./api/build",
    "build-server": "babel -d ./api/build ./api/src -s",
    "build": "npm run clean && npm run build-server",
    "watch": "nodemon --exec npm run start",
    "start": "node ./api/build/index.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-polyfill": "^6.20.0",
    "kcors": "^2.2.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-logger": "^1.3.0",
    "koa-route": "^2.4.2",
    "koa-router": "^7.0.1"
  }
}
